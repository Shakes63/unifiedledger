# Unified Ledger - Local Development Environment Variables
# Copy to .env.local and fill in with your values
# NEVER commit .env.local to git!

# Database
DATABASE_URL=file:./finance.db

# Application URL (for email verification links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Better Auth (Required)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-dev-secret-here-min-32-chars

# Google OAuth (Optional - enables "Sign in with Google" and Google Calendar sync)
# 1. Go to Google Cloud Console: https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID (Web application type)
# 3. Add authorized redirect URI: http://localhost:3000/api/better-auth/callback/google
# Note: Calendar sync uses the same OAuth - users link their Google account once
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Optional - enables "Sign in with GitHub")
# 1. Go to GitHub Developer Settings: https://github.com/settings/developers
# 2. Create new OAuth App
# 3. Set callback URL: http://localhost:3000/api/better-auth/callback/github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration
# Choose email provider: "resend" (recommended) or "smtp" (for testing)
EMAIL_PROVIDER=resend

# Resend Configuration (Recommended for development)
# Get free API key from: https://resend.com/api-keys
# Free tier: 100 emails/day, 3,000/month
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=Unified Ledger Dev

# SMTP Configuration (Alternative for local testing)
# Example using Gmail App Password:
# 1. Enable 2FA on Gmail
# 2. Generate App Password at: https://myaccount.google.com/apppasswords
# 3. Use app password (not your regular password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM=your-email@gmail.com
SMTP_FROM_NAME=Unified Ledger Dev

# Feature Flags
ENABLE_CRON_JOBS=false
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_ALERTS=true

# Test Mode (Development Only)
# WARNING: Only use for development/testing, NEVER in production!
# When enabled:
# - Authentication is completely bypassed
# - A test admin user is auto-created
# - All API routes return data for the test user
# TEST_MODE=true

# TickTick OAuth (Optional - enables TickTick calendar sync)
# Note: TickTick requires separate OAuth (not shared with sign-in)
# 1. Register app at TickTick Developer Center: https://developer.ticktick.com/manage
# 2. Create new application and get credentials
# 3. Add redirect URI: http://localhost:3000/api/calendar-sync/ticktick/callback
TICKTICK_CLIENT_ID=your-ticktick-client-id
TICKTICK_CLIENT_SECRET=your-ticktick-client-secret
